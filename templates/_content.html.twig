{% macro nav_item(link, text) %}
    <li class="nav-item">
        <a class="nav-link {% if app.request.pathInfo == link %}active{% endif %}" href="{{ link }}">{{ text }}</a>
    </li>
{% endmacro %}
{% import _self as own_macros %}

{% extends "_base.html.twig" %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-hilti">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="{{ asset('build/images/logo.svg') }}" alt="Hilti" height="40">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    {% if is_granted('ROLE_USER') %}
                        {{ own_macros.nav_item(path("submission_mine"), "mine.title"|trans({}, "submission")) }}
                    {% endif %}
                </ul>
                <ul class="navbar-nav">
                    {% block navbar_secondary %}
                        <a href="mailto:{{ env_support_email }}" class="nav-link">
                            <i class="far fa-envelope-open"></i>
                        </a>
                    {% endblock %}
                    {% if app.user is null %}
                        {{ own_macros.nav_item(path("login"), "login.title"|trans({}, "security")) }}
                    {% else %}
                        {% if is_granted('IS_IMPERSONATOR') %}
                            {{ own_macros.nav_item(impersonation_exit_path(path('index')), "impersonation.exit"|trans({}, "security")) }}
                        {% else %}
                            {{ own_macros.nav_item(path("logout"), "logout.title"|trans({}, "security")) }}
                        {% endif %}
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        {% block content %}

        {% endblock %}
    </div>
{% endblock %}
