{% extends "security/_base.html.twig" %}

{% block title %}{{ "register.title"|trans }}{% endblock %}
{% block description %}{{ "register.description"|trans }}{% endblock %}

{% trans_default_domain "security" %}

{% block form_content %}
    <div class="form-wrapper">
        {{ form_start(form) }}

        {{ form_widget(form.email) }}
        {{ form_widget(form.password) }}

        <p class="text-sm mt-4">{{ "register.personal_data_usage_statement"|trans }}</p>

        {{ form_row(form.submit) }}

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block secondary_content %}
    <p class="small text-secondary">
        <a class="arrow" href="{{ path("login") }}">{{ "register.back_to_login"|trans }}</a>
    </p>
{% endblock %}
