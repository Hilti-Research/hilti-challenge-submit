{% extends "_form_content.html.twig" %}

{% form_theme form _self %}

{% block form_content %}

    <div class="row">
        <div class="col-md-6">
            {{ form_start(form) }}

            <div class="row">
                <div class="col-md-2">
                    {{ form_row(form.iteration) }}
                </div>
                <div class="col-md-10">
                    {{ form_row(form.description) }}
                </div>
            </div>
            <hr/>
            <div class="row">
                <div class="col-md-8">
                    {{ form_row(form.evaluationType) }}
                </div>
                <div class="col-md-12">
                    {{ form_row(form.solutionFile) }}
                </div>
            </div>
            <hr/>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.reportFile) }}
                </div>
            </div>
        </div>
    </div>


    <div class="d-flex align-items-center gap-3">
        {{ form_widget(form.submit) }}

        {% if availableSubmissions is defined %}
            <span class="text-secondary">
                {{ "new.info.limit"|trans({"%count%": availableSubmissions}, "submission") }}
            </span>
        {% endif %}

    </div>

    {{ form_end(form) }}
{% endblock %}
