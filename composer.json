{
    "name": "hilti-challenge/submit",
    "description": "The submit tool for the Hilti SLAM challenge",
    "type": "project",
    "license": "MIT",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-zip": "*",
        "aws/aws-sdk-php": "^3.209",
        "doctrine/doctrine-bundle": "^2.5",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^3.5",
        "symfony/asset": "^7",
        "symfony/console": "^7",
        "symfony/dotenv": "^7",
        "symfony/expression-language": "^7",
        "symfony/flex": "^2",
        "symfony/form": "^7",
        "symfony/framework-bundle": "^7",
        "symfony/http-client": "^7",
        "symfony/intl": "^7",
        "symfony/lock": "^7",
        "symfony/mailer": "^7",
        "symfony/mime": "^7",
        "symfony/monolog-bundle": "^3.0",
        "symfony/property-access": "^7",
        "symfony/property-info": "^7",
        "symfony/runtime": "^7",
        "symfony/security-bundle": "^7",
        "symfony/serializer": "^7",
        "symfony/string": "^7",
        "symfony/translation": "^7",
        "symfony/twig-bundle": "^7",
        "symfony/uid": "^7",
        "symfony/validator": "^7",
        "symfony/web-link": "^7",
        "symfony/webpack-encore-bundle": "^2",
        "symfony/yaml": "^7",
        "twig/cssinliner-extra": "^3.3",
        "twig/extra-bundle": "^3.3",
        "twig/inky-extra": "^3.3",
        "twig/twig": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "platform": {
            "php": "8.4"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "prepare-environment": [
            "touch .env.local",
            "php bin/console doctrine:migrations:migrate  --no-interaction"
        ],
        "create-migration": [
            "php bin/console doctrine:migrations:diff --no-interaction"
        ],
        "post-install-cmd": [
            "@auto-scripts",
            "@prepare-environment"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "@prepare-environment"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^7"
        }
    },
    "require-dev": {
        "famoser/agnes": "^4.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^2.2",
        "squizlabs/php_codesniffer": "*",
        "symfony/browser-kit": "^7",
        "symfony/css-selector": "^7",
        "symfony/debug-bundle": "^7",
        "symfony/phpunit-bridge": "^7",
        "symfony/stopwatch": "^7",
        "symfony/web-profiler-bundle": "^7"
    }
}
